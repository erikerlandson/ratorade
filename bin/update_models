import sys
import time
import random
import argparse
import pymongo

import ratorade

argparser = argparse.ArgumentParser()
argparser.add_argument('-rate', required=True, metavar='<attr-name>', help='attr containing item categories that are being rated')
argparser.add_argument('-rating', default='rating', metavar='<attr-name>', help='attr containing ratings/scores: def="rating"')
argparser.add_argument('-user', default='user', metavar='<attr-name>', help='attr containing user ids: def= "user"')
argparser.add_argument('-minratings', type=int, default=10, metavar='<N>', help='require at least N ratings to generate a model: def= 10')
argparser.add_argument('-targettime', type=int, default=3600, metavar='<seconds>', help='target total update time: def= 3600')
argparser.add_argument('-refresh', default=False, action='store_true', help='refresh all models from scratch')
argparser.add_argument('-cvholdout', type=int, default=None, metavar='<N>', help='hold out CV fold N from model building') 
argparser.add_argument('-cvattr', default="cvf", metavar='<attr>', help='use "attr" for crossval fold: def= "cvf"')
argparser.add_argument('-dbname', default='ratorade', metavar='<name>', help='rating db name: def="ratorade"')
argparser.add_argument('-data', default='ratings', metavar='<collection-name>', help='rating data collection name: def= "ratings"')
argparser.add_argument('-models', default='models', metavar='<collection-name>', help='model collection name: def= "models"')
argparser.add_argument('-updates', default='updates', metavar='<collection-name>', help='updates collection name: def= "updates"')
argparser.add_argument('-dbserver', default='127.0.0.1', metavar='<db-server-ip>', help='def=127.0.0.1')

args = argparser.parse_args()

t00 = time.time()

mongo = ratorade.require_connection(args.dbserver)
ratorade_db = ratorade.require_db(mongo, args.dbname)

# This must exist, since it holds the model input data
data = ratorade.require_collection(ratorade_db, args.data)

# These can be created silently if they don't already exist
models = ratorade_db[args.models]
updates = ratorade_db[args.updates]

# maintain an update timestamp
timestamps = updates.find_one({"type":"timestamps"})
if timestamps is None:
    tsid = updates.insert({"type":"timestamps"})
    timestamps = updates.find_one({"_id":tsid})

last_model_update = 0
if timestamps.has_key("models_updated"):
    last_model_update = timestamps["models_updated"]
updates.update({"_id":timestamps["_id"]}, {"$set":{"models_updated":time.time()}})

sys.stdout.write("last model update: %d\n" % (last_model_update))

if args.refresh:
    sys.stdout.write("refreshing model collection %s\n" % (args.models))
    last_model_update = 0
    models.drop()
    models = ratorade_db[args.models]

sys.stdout.write("updating data indexes...\n")
data.ensure_index([("updated", pymongo.ASCENDING)])
data.ensure_index([(args.rate, pymongo.ASCENDING)])
data.ensure_index([(args.user, pymongo.ASCENDING)])
data.ensure_index([("rk0", pymongo.ASCENDING)])
data.ensure_index([("rk1", pymongo.ASCENDING)])

# We need a census of categories to implement some efficiencies
sys.stdout.write("assessing histogram over %s...\n" % (args.rate))
uniq = data.distinct(args.rate)
uhist = dict([(k, data.find({args.rate:k}, fields=[args.rate]).count()) for k in uniq])

# ratings since the last model update
sys.stdout.write("identifying new ratings...\n")
nrquery = {"updated":{"$gt":last_model_update}}
if args.cvholdout is not None: nrquery[args.cvattr] = {'$ne':args.cvholdout}
new_ratings = data.find(nrquery, fields=[args.user, args.rate, args.rating], timeout=False)
nr = new_ratings.count()
sys.stdout.write("identified %d new ratings\n" % (nr))

sys.stdout.write("updating models stats for %s...\n" % (args.rate))
mcount = 0
tlast = time.time()
t0 = tlast
tint = 0
nrdone = 0
fsamp = 1.0
for r0 in new_ratings:
    nrdone += 1
    # require a minimum number of ratings for this category to bother generating a model
    if uhist[r0[args.rate]] < args.minratings: continue
    query = ratorade.random_sampling_query(fsamp)
    query["_id"] = {"$lt":r0["_id"]}
    query[args.user] = r0[args.user]
    if args.cvholdout is not None: query[args.cvattr] = {'$ne':args.cvholdout}
    qres = data.find(query,fields=[args.rate,args.rating]).hint([(args.user, pymongo.ASCENDING)])
    for r1 in qres:
        if uhist[r1[args.rate]] < args.minratings: continue
        ratorade.update_stats_linear(models, r0, r1, id_attr=args.rate, rating_attr=args.rating)
        mcount += 1
    tt = time.time()
    tint += tt-tlast
    tlast = tt
    if (tint >= 30):
        elapsed = float(tt - t0)
        nrate = float(nrdone)/float(elapsed)
        ettc = float(nr-nrdone)/nrate
        remaining = args.targettime-elapsed
        if remaining <= 0: break
        fsamp *= remaining / ettc
        fsamp = min(1.0,fsamp)
        sys.stdout.write("elapsed: %d  new: %d/%d  rate: %g  ettc: %d  models:%d  updates: %d  update rate: %g  fsamp: %g\n" % (int(elapsed), nrdone, nr, nrate, int(ettc), models.count(), mcount, float(mcount)/elapsed, fsamp))
        tint -= 30

sys.stdout.write("updating %d model coefficients for %s...\n" % (models.count(), args.rate))
t0 = time.time()
for m in models.find():
    ratorade.update_coeff_linear(models, m)
sys.stdout.write("time to update coeff: %d sec\n" % (int(time.time()-t0)))

sys.stdout.write("total run time: %d sec\n" % (int(time.time()-t00)))
